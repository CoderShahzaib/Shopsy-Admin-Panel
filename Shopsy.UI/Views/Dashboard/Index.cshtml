@using Shopsy.UI.Models
@model DashboardViewModel
@{
    ViewData["Title"] = "Dashboard";
}

<div class="dashboard">

    <div class="dashboard-header">
        <h1>Dashboard</h1>
        <p>Welcome back to <strong>Shopsy Admin Panel</strong></p>
    </div>

    <div class="stats">
        <div class="card">
            <h3>Total Orders</h3>
            <p>@Model.TotalSales</p>
        </div>

        <div class="card revenue">
            <h3>Total Revenue</h3>
            <p>@Model.TotalRevenue</p>
        </div>

        <div class="card">
            <h3>Products</h3>
            <p>@Model.TotalProducts</p>
        </div>

        <div class="card customers">
            <h3>Customers</h3>
            <p>@Model.totalUsers</p>
        </div>
    </div>

    <div class="content">
        <div class="panel">
            <h2>Recent Orders</h2>

            <table>
                <thead>
                    <tr>
                        <th>Order ID</th>
                        <th>Customer</th>
                        <th>Status</th>
                        <th>Date</th>
                        <th>Amount</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.RecentSales != null && Model.RecentSales.Any())
                    {
                        foreach (var sale in Model.RecentSales)
                        {
                            <tr>
                                <td>#ORD-@sale.Id</td>
                                <td>@sale.CustomerName</td>

                                <td class="@(sale.PaymentStatus == "Paid" ? "success" : "pending")">
                                    @sale.PaymentStatus
                                </td>

                                <td>@sale.OrderDate.ToString("dd MMM yyyy")</td>

                                <td>@sale.GrandTotal.ToString("C")</td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="5" class="text-center">
                                No recent orders
                            </td>
                        </tr>
                    }
                </tbody>

            </table>
        </div>


        <div class="panel">
            <h2>Quick Actions</h2>
            <a asp-action="Create" asp-controller="Products" class="btn primary">Add Product</a>
            <a asp-action="Index" asp-controller="Sales" class="btn dark">View Orders</a>
        </div>
    </div>

</div>
